<header class="header fixed-top clearfix">

  <%= render 'shared/navbar/logo' %>

  <div class="nav notify-row" id="top_menu">
    <ul class="nav top-menu">

      <li class="dropdown">
        <%= link_to root_path, data: { :toggle => :tooltip, :placement => :bottom }, title: "New" do %>
          <i class="fa fa-plus"></i>
        <% end %>
      </li>

      <% if current_user.gists.any? %>
        <li id="header_inbox_bar" class="dropdown">
          <%= link_to gists_path, data: { :toggle => :tooltip, :placement => :bottom }, title: "Projects" do %>
            <i class="fa fa-folder-open"></i>
          <% end%>
        </li>
      <% end %>

    </ul>
  </div>

  <!-- right begins here -->
  <div class="top-nav clearfix">
    <ul class="nav pull-right top-menu">

      <li class="dropdown">
        <a data-toggle="dropdown" class="dropdown-toggle" href="#">
          <%= gravatar_image_tag_for(current_user, 50) %>
          <span class="username"><%= current_user.email %></span>
          <b class="caret"></b>
        </a>
        
        <ul class="dropdown-menu extended logout">
          <li>
            <%= link_to edit_user_registration_path do %>
              <i class="fa fa-cog"></i> Settings
            <% end %>
          </li>
          <li>
            <%= link_to destroy_user_session_path, method: :delete do %>
              <i class="fa fa-sign-out"></i> Sign Out
            <% end %>
          </li>
        </ul>
      </li>

    </ul>
  </div>
</header>